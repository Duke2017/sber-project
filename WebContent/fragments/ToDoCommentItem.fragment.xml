<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">

	<VBox visible="{= ${type} === 'post' &amp;&amp; ${visible} === true ?
    	true : false }">
     <HBox justifyContent="SpaceBetween">
       
        <Text text="{title}" class="blackcolor sapUiTinyMargin bold"/>
		<core:Icon src="{icon}" class="sapUiTinyMargin" press="closeCommentItem"/>
    
     </HBox>
       
		<Text text="{message}" class="sapUiTinyMargin"/>
		
	</VBox>
</core:FragmentDefinition>